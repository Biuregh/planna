<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Link Vendor</title>
</head>

<body>
    <div class="layout">
        <%- include("../partials/_navbar") %>
        <main class="content">
            <section class="event-index">
                <h1 class="heading">Link Vendor to Event</h1>
                <form class="form" action="/events/<%= eventId %>/vendors" method="POST">
                    <label for="vendorId">Select Vendor:</label>
                    <select name="vendorId" id="vendorId" required>
                        <% vendors.forEach(v=> { %>
                            <option value="<%= v._id %>">
                                <%= v.name %> - <%= v.serviceType %>
                            </option>
                        <% }) %>
                    </select>

                    <label for="notes">Notes:</label>
                    <textarea name="notes" id="notes" rows="3"></textarea>

                    <label for="totalCost">Total Cost:</label>
                    <input type="number" name="totalCost" id="totalCost" step="0.01" />

                    <label for="rate">Rate (1-5):</label>
                    <input type="number" name="rate" id="rate" min="1" max="5" />
                    
                    <button class="btn btn-submit" type="submit">Link Vendor</button>
                </form>
                
            </section>
        </main>
    </div>
</body>

</html>