<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Vendors</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/layout.css" />
</head>

<body>
    <%- include("../partials/_logo") %>
        <div class="layout">
            <%- include("../partials/_navbar") %>
                <main class="content">
                    <section class="event-index">
                        <h1 class="heading">Linked Vendors</h1>
                        <a class="btn btn-create" href="/events/<%= eventId %>">Back to Event</a>
                        <a class="btn btn-create" href="/events/<%= eventId %>/vendors/new">Link a Vendor</a>
                        <ul class="event-list">
                            <% userVendors.forEach(link=> { %>
                                <olclass="event-item">
                                    <div class="event-main">
                                        <div class="event-meta">
                                            <span class="event-link">
                                                <%= link.vendorId ? link.vendorId.name : 'Unknown Vendor' %>
                                            </span>
                                            <span class="event-date">
                                                <%= link.vendorId ? link.vendorId.serviceType : 'N/A' %>
                                            </span>
                                            <span class="vendor-locat">
                                                <%= link.vendorId ? link.vendorId.city : 'N/A' %>
                                            </span>
                                            <span class="vendor-state">
                                                <%= link.vendorId ? link.vendorId.state : 'N/A' %>
                                            </span>
                                            <a class="btn btn-rsvp"
                                                href="/events/<%= eventId %>/vendors/<%= link._id %>">Detsils</a>
                                            <a class="btn btn-edit"
                                                href="/events/<%= eventId %>/vendors/<%= link._id %>/edit">Edit</a>
                                            <form class="event-delete-form"
                                                action="/events/<%= eventId %>/vendors/<%= link._id %>?_method=DELETE"
                                                method="POST">
                                                <button class="btn btn-delete" type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </ol>
                            <% }) %>
                        </ul>
                    </section>
                </main>
        </div>
</body>

</html>