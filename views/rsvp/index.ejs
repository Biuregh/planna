<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RSVPs for <%= event.name %>
    </title>
</head>

<body>
    <div class="layout">
        <%- include("../partials/_navbar") %>
        <main class="content">
            <section class="rsvp-index" id="rsvp-index">
                <h1 class="heading">RSVPs for <%= event.name %>
                </h1>
                <% if (rsvps.length===0) { %>
                    <p class="no-results">No RSVPs yet for this event.</p>
                <% } else { %>
                    <table class="rsvp-table">
                        <thead>
                            <tr>
                                <th>Guest</th>
                                <th>Attending</th>
                                <th>Meal</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rsvps.forEach(rsvp=> { %>
                                <tr class="rsvp-row">
                                    <td class="rsvp-guest">
                                        <%= rsvp.guestId.firstName %> <%= rsvp.guestId.lastName %>
                                    </td>
                                    <td class="rsvp-status">
                                        <%= rsvp.attending %>
                                    </td>
                                    <td class="rsvp-meal">
                                        <%= rsvp.mealChoice || "N/A" %>
                                    </td>
                                    <td class="rsvp-actions">
                                        <a class="btn btn-view"
                                            href="/events/<%= event._id %>/rsvps/<%= rsvp._id %>">View</a>
                                        <a class="btn btn-edit"
                                            href="/events/<%= event._id %>/rsvps/<%= rsvp._id %>/edit">Edit</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                 <% } %>
            </section>
        </main>
    </div>
</body>

</html>