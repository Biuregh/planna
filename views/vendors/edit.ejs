<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Vendor</title>
</head>

<body>
    <div class="layout">
        <%- include("../partials/_navbar") %>
        <main class="content">
            <section class="vendor-edit">
                <h1 class="heading">Edit Vendor</h1>
                <form class="form-vendor" action="/vendors/<%= vendor._id %>?_method=PUT" method="POST">

                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" value="<%= vendor.name %>" required />

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= vendor.email %>" required />

                    <label for="phone">Phone:</label>
                    <input type="text" id="phone" name="phone" value="<%= vendor.phone %>" />

                    <label for="website">Website:</label>
                    <input type="text" id="website" name="website" value="<%= vendor.website %>" />

                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" value="<%= vendor.address %>" />

                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" value="<%= vendor.city %>" />

                    <label for="state">State:</label>
                    <input type="text" id="state" name="state" value="<%= vendor.state %>" />

                    <label for="zip">ZIP:</label>
                    <input type="number" id="zip" name="zip" value="<%= vendor.zip %>" />

                    <label for="serviceType">Service Type:</label>
                    <input type="text" id="serviceType" name="serviceType" value="<%= vendor.serviceType %>" required />

                    <label for="description">Description:</label>
                    <textarea id="description" name="description"><%= vendor.description %></textarea>

                    <button class="btn btn-submit" type="submit">Update Vendor</button>
                </form>
            </section>
        </main>
    </div>
</body>

</html>